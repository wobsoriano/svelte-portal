{
	"name": "@jsrob/svelte-portal",
	"description": "A Svelte component that lets you render some children into a different part of the DOM.",
	"license": "MIT",
	"keywords": [
		"svelte",
		"portal",
		"teleport"
	],
	"homepage": "https://github.com/wobsoriano/svelte-portal#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wobsoriano/svelte-portal.git"
	},
	"bugs": "https://github.com/wobsoriano/svelte-portal/issues",
	"version": "0.2.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"release": "pnpm build && changeset publish",
		"test": "vitest"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.9",
		"@sveltejs/adapter-auto": "^3.2.5",
		"@sveltejs/kit": "^2.7.2",
		"@sveltejs/package": "^2.3.5",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.7.7",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.11.0",
		"jsdom": "^25.0.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"publint": "^0.2.11",
		"svelte": "^5.0.5",
		"svelte-check": "^4.0.5",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.11.0",
		"vite": "^5.4.9",
		"vitest": "^2.1.3"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
